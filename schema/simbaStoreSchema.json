{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "store": {
      "title": "Store",
      "$$target": [
        "#/definitions/store"
      ],
      "allOf": [
        {
          "type": "object",
          "properties": {
            "address": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "readOnly": {
              "type": "boolean",
              "default": false
            },
            "initialPath": {
              "type": "string"
            },
            "stores": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/store"
              }
            }
          },
          "required": [
            "type"
          ]
        },
        {
          "oneOf": [
            {
              "$ref": "#/definitions/fileStore"
            },
            {
              "$ref": "#/definitions/csvStore"
            },
            {
              "description": "FrictionlessData: tabular data resource",
              "$ref": "https://raw.githubusercontent.com/frictionlessdata/specs/master/schemas/dictionary.json#/definitions/tabularDataResource",
              "patternProperties": {
                "address": {},
                "type": {},
                "readOnly": {},
                "stores": {}
              },
              "additionalProperties": false
            }
          ]
        }
      ]
    },
    "fileStore": {
      "$id": "fileStore",
      "title": "File Store",
      "$$target": [
        "#/definitions/file"
      ],
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "file"
          ]
        }
      },
      "required": [
        "path",
        "name",
        "type",
        "initialPath"
      ]
    },
    "csvStore": {
      "$id": "csvStore",
      "title": "CSV Store",
      "$$target": [
        "#/definitions/csv"
      ],
      "allOf": [
        { 
          "type": "object",
          "properties": {
            "type": {
              "enum": [
                "csv"
              ]
            }
          }
        },
        {
          "description": "FrictionlessData: tabular data resource",
          "$ref": "https://raw.githubusercontent.com/frictionlessdata/specs/master/schemas/dictionary.json#/definitions/tabularDataResource",
          "patternProperties": {
            "address": {},
            "type": {},
            "readOnly": {},
            "stores": {}
          }
        }
      ],
      "required": [
        "path",
        "name",
        "type",
        "initialPath"
      ]
    }
  },
  "type": "object",
  "required": [
    "path",
    "stores"
  ],
  "properties": {
    "path": {
      "type": "string"
    },
    "stores": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/store"
      }
    }
  }
}