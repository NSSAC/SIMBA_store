{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "store": {
      "title": "Store",
      "$$target": [
        "#/definitions/store"
      ],
      "allOf": [
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "address": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "readOnly": {
              "type": "boolean",
              "default": false
            },
            "stores": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/store"
              }
            }
          }
        },
        {
          "oneOf": [
            {
              "type": "object",
              "required": [
                "path",
                "name"
              ],
              "properties": {
                "path": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                }
              }
            },
            {
              "description": "FrictionlessData: tabular data resource",
              "$schema": "file://./frictionlessdata/schemas/tabular-data-resource.json"
            }
          ]
        }
      ]
    }
  },
  "type": "object",
  "required": [
    "path",
    "stores"
  ],
  "properties": {
    "path": {
      "type": "string"
    },
    "stores": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/store"
      }
    }
  }
}